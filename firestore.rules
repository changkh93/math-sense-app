rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.admin == true || 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Helper to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Regions, Chapters, Units, Quizzes: Public Read, Admin Write
    match /regions/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /chapters/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /units/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /quizzes/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Questions & Answers
    match /questions/{questionId} {
      allow create: if isAuth();
      allow read: if isAuth() && (resource.data.isPublic == true || resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    match /answers/{answerId} {
      allow create: if isAuth();
      allow read: if isAuth() && (
        isAdmin() || 
        get(/databases/$(database)/documents/questions/$(resource.data.questionId)).data.isPublic == true || 
        get(/databases/$(database)/documents/questions/$(resource.data.questionId)).data.userId == request.auth.uid
      );
      allow update, delete: if isAuth() && (request.auth.uid == resource.data.userId || isAdmin());
    }

    // Users: User can read/write their own data. Admin can read all.
    match /users/{userId} {
      allow read: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuth() && (request.auth.uid == userId || isAdmin());
      
      // Allow subcollections (like 'history')
      match /{document=**} {
        allow read, write: if isAuth() && (request.auth.uid == userId || isAdmin());
      }
    }
  }
}
