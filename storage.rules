rules_version = '2';

// Craft rules based on your app's needs.
// For more information, visit https://firebase.google.com/docs/storage/security

service firebase.storage {
  match /b/{bucket}/o {
    // Quiz images are readable by everyone, but writable only by admins
    match /quiz_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; 
      // Note: Ideally, check if user has admin role if you have roles set up
    }
  }
}
